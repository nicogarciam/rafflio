# ========================================
# CONFIGURACIÓN DE SUPABASE
# ========================================
# Obtén estas credenciales desde tu proyecto de Supabase
# Dashboard > Settings > API
VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# ========================================
# CONFIGURACIÓN DE MERCADOPAGO
# ========================================
# Obtén estas credenciales desde tu cuenta de MercadoPago
# https://www.mercadopago.com.ar/developers/panel/credentials
VITE_MERCADOPAGO_ACCESS_TOKEN=your_mercadopago_access_token_here
VITE_MERCADOPAGO_PUBLIC_KEY=your_mercadopago_public_key_here

# ========================================
# CONFIGURACIÓN DE LA APLICACIÓN
# ========================================
VITE_APP_NAME=Rafflio
VITE_APP_BASE_URL=http://localhost:3000
VITE_API_BASE_URL=http://localhost:3000/api

# ========================================
# CONFIGURACIÓN DE DESARROLLO
# ========================================
# Solo para desarrollo - NO USAR EN PRODUCCIÓN
NODE_ENV=development

# ========================================
# CONFIGURACIÓN DE IA (HUGGING FACE)
# ========================================
# Obtén tu API key gratuita desde https://huggingface.co/settings/tokens
# Crea una cuenta gratuita y genera un token de acceso
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# ========================================
# CONFIGURACIÓN DE PRODUCCIÓN
# ========================================
# Descomenta y configura estas variables para producción
# VITE_APP_BASE_URL=https://tu-dominio.com
# VITE_API_BASE_URL=https://tu-dominio.com/api 